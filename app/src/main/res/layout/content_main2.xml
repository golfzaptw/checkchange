<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.flukepc.test01.DetailofDrom"
    tools:showIn="@layout/activity_main2">


    <Button
        android:text="จองหอพัก"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/btnBooking"  android:background="@android:color/holo_green_dark"
        android:textColor="@color/cardview_light_background"/>

    <Button
        android:id="@+id/logout"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"  android:background="@drawable/logout"
        android:textColor="@color/cardview_light_background" />

    <TextView
        android:id="@+id/namefb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:textColor="@color/cardview_light_background" />

    <Button
        android:text="ดูรูปหอพักทั้งหมด"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnImg"
        android:layout_alignBaseline="@+id/btnDetail"
        android:layout_alignBottom="@+id/btnDetail"
        android:layout_alignParentEnd="true"   android:background="#64000000"
        android:textColor="@color/cardview_light_background"
        android:layout_toEndOf="@+id/btnBooking" />

    <Button
        android:text="ขอเส้นทาง"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:id="@+id/showmappath"
        android:layout_below="@+id/btnImg"
        android:layout_alignParentStart="true"  android:background="@color/cast_intro_overlay_button_background_color"
        android:textColor="@color/cardview_light_background"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnDetail"
        android:layout_alignStart="@+id/btnDetail"
        android:layout_marginBottom="25dp"
        android:textAlignment="center" />

    <Button
    android:text="รายละเอียดหอพัก"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/btnDetail"
        android:background="#64000000"
        android:textColor="@color/cardview_light_background"
        android:layout_marginBottom="109dp"
        android:layout_above="@+id/btnBooking"
        android:layout_toStartOf="@+id/btnBooking" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/btnBack"
        android:background="@drawable/btn_back"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="300dp"
        android:background="@drawable/logo"
        android:id="@+id/urlImg"
        android:layout_height="198dp"
        android:layout_below="@+id/btnBack"
        android:layout_alignStart="@+id/tv1"
        android:layout_marginTop="13dp" />


</RelativeLayout>
