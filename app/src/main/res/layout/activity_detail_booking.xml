<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/activity_detail_booking"
android:orientation="vertical"
android:layout_width="match_parent"
android:background="@drawable/bg"
android:layout_height="match_parent"
tools:context="com.example.flukepc.test01.DetailBooking">


    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="83dp"
    android:layout_x="0dp"
    android:layout_y="1dp"
    android:background="#64000000"
    >

    <RelativeLayout
        android:layout_height="50dp"
        android:id="@+id/backk"
        android:background="@drawable/btn_back"
        android:layout_width="50dp"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp">


    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_width="199dp"
        android:layout_marginLeft="100dp">

        <TextView
            android:text="สรุปรายการ"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/textView3"
            android:layout_marginBottom="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:textSize="24sp"
            android:textColor="@color/com_facebook_button_border_color_focused"
            android:textStyle="normal|bold" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/go"
        android:background="@drawable/btn_go"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp">


    </RelativeLayout>

</RelativeLayout>

    <ImageView
        android:id="@+id/IM"
        android:background="@drawable/apartment"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:adjustViewBounds="true"
        android:cropToPadding="true"
        android:fitsSystemWindows="false"
        android:layout_marginTop="100dp"
        android:layout_below="@+id/relativeLayout"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dataill"
        android:adjustViewBounds="true"
        android:gravity="center"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="135dp"
        android:textAlignment="center"
        android:textSize="24sp"
        android:layout_below="@+id/name"
        android:layout_centerHorizontal="true" />

    <TextView
    android:text="สรุปรายการ"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/name"
    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
    android:textAlignment="center"
        android:textColor="@color/cardview_dark_background"
        android:layout_below="@+id/IM"
        android:layout_alignParentStart="true"
        android:layout_marginTop="17dp"
        android:textSize="30sp" />

</RelativeLayout>

